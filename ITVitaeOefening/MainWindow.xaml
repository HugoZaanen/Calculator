<Window x:Class="ITVitaeOefening.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITVitaeOefening"
        mc:Ignorable="d"
        Title="Calculator" Height="350" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Margin="10" VerticalAlignment="center" Width="200" Height="220" x:Name="stack">
        <Label Content="Eerste getal:"/>
        <TextBox x:Name="Getal1"/>
        <Label Content="Tweede getal:"/>
        <TextBox x:Name="Getal2"/>
        <Button x:Name="Bereken" Content="Bereken!" Margin="0,10,0,0" Click="Berekenen"/>
        <Label x:Name="Veld" />
        <RadioButton x:Name="Optellen" Content="Optellen"/>
        <RadioButton x:Name="Aftrekken" Content="Aftrekken"/>
        <RadioButton x:Name="Vermenigvuldigen" Content="Vermenidvuldigen"/>
        <RadioButton x:Name="Delen" Content="Delen"/>
    </StackPanel>
        <Grid HorizontalAlignment="Right" Margin="0,10,10,50" Width="100">
            <ListBox x:Name="History"/>
        </Grid>
        <Button Content="Clear" HorizontalAlignment="Left" Margin="293,289,0,0" VerticalAlignment="Top" Width="75" Click="Clear"/>

    </Grid>
</Window>
